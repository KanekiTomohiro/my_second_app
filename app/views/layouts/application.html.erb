<!DOCTYPE html>
<html>
  <head>
    <title>MySecondApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<header class="navbar">
  <div class="container">
    <div id="logo">Tweet</div>
    <ul class="header-right">
     <% if user_signed_in? %>
      <li><%= link_to "新規投稿", notes_new_path %></li>
      <li><%= link_to "投稿一覧", notes_path %></li> 
      <li><%= link_to "ユーザ一覧", users_path %></li>
      <li><%= current_user.name %></li>
      <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
     <% else %>
      <li><%= link_to "トップ", root_path %></li>
      <li><%= link_to "ユーザ登録", new_user_registration_path %></li>
      <li><%= link_to "ログイン", new_user_session_path %></li>
     <% end %>
  
      <!-- <li><%= link_to "目的", about_path %></li> -->
      
    </ul>
  </div>
</header>


    <p class="alert alert-success"><%= notice %></p>
    <p class="alert alert-danger"><%= alert %></p>

    <%= yield %>

    <div class="container">
  <footer class="footer">
    <div class="small">
      &copy; 2017 Yuta Mizogami
    </div>
  </footer>
</div>

  </body>
</html>
