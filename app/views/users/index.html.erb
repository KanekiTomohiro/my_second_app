<h1>ユーザ一覧</h1>

<ul class="users">
  <!-- eachメソッドで@usersに入ったものを一つずつ取り出している -->
  <% @users.each do |user| %>
    <li>
      <span class="content">
        <!-- ゲッターを用いてnameを表示 -->
        <%= image_tag 'sample.png', class: "profile_img" %>
        <%= link_to user.name, user_path(user.id) %>
        <%= user.email %>
      </span>
    </li>
  <% end %>
</ul>

